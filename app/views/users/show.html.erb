<div id="hello-user">
  <h1>Hello movie lover, <%=current_user.username%>!</h1>
  <button class="btn blue" onclick="location.href='#movie-search-form'">Add Movie</button>
  <button class="btn red">Watch Movie</button>
</div>
<div class="notice">
  <% if flash[:notice] %>
    <%= flash[:notice]%>
  <%end%>
</div>

<div class="watch-list">
<%= render 'displayed_movies' %>
</div>


<div id="movie-search-form">

<h2>What movie would you like to add?</h2>
  <%= render 'add_movie' %>
</div>

<h3>Watch a Movie!</h3>

<div class="watch-movie-form">
  <%= render 'search_form' %>
</div>

<div class="returned-movies">
  <%= render 'returned_movies' %>
</div>